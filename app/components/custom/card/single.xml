<GridLayout rows="auto,25,auto,25,auto" columns="*,20,auto" class="pm round_m bg_white border_dark_grey border_s">
    
    <Label row="0" col="0" text="{{name}}" class="h3 black bold" ios:textWrap="true" />
    <Label row="1" col="0" text="{{advertieser}}" class="h4 dark_silver" ios:textWrap="true" />
    
    <Label row="2" col="0" text="Enviado" class="h4 left green border_green border_s round_s" padding="2 5 2 5" />

    <StackLayout row="3" orientation="horizontal">
        <Label text="{{location}}" class="h4 silver"/>
        <Label text="{{createdAt}}" class="pm_l h4 silver"/>
    </StackLayout>

    <Image rowSpan="4" col="2" src="{{imgUrl}}" verticalAlignment="middle" height="80" width="60" class="round_s bg_grey" stretch="aspectFill"/>
    
</GridLayout>

