<GridLayout columns="auto,20,*" class="pm">
    <Label col="0" text="{{alerts>0?'&#xf106;':'&#xf105;'}}" verticalAlignment="middle" class="h1 icon bg_grey round_s border_s border_dark_grey circle pm"/>
    <Label col="0" text="{{alerts}}" class="h4 white bg_red circle bold" height="23" width="23" textAlignment="center" verticalAlignment="top" horizontalAlignment="right" marginTop="5" visibility="{{alerts>0?'visible':'collapsed'}}"/>
    <StackLayout col="2" verticalAlignment="middle">
        <Label text="{{name}}" class="h3 black pm_r bold"/>
        <Label text="Hace 32 min" class="h4 silver"/>
    </StackLayout> 
</GridLayout>

