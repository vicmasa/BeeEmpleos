<ScrollView orientation="horizontal"  scrollBarIndicatorVisible="false"> 
    <Repeater id="repeater_select" items="{{repeater_select}}">
        <Repeater.itemsLayout>
            <StackLayout orientation="horizontal"/>
        </Repeater.itemsLayout> 
        <Repeater.itemTemplate> 
            <Button text="{{$value}}" class="h3 dark_silver bg_dark_grey pm" borderRadius="50" margin="5 5 5 0"/>
        </Repeater.itemTemplate>
    </Repeater>
</ScrollView>