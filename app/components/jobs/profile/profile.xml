<Page
    loaded="loaded"
    actionBarHidden="true"
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:image="components/custom/image"
    xmlns:details="components/custom/details"
    xmlns:profile="components/custom/profile"
    xmlns:buttonBottom="components/custom/buttonBottom">

    <GridLayout rows="*,auto" android:paddingTop="21">
        <ScrollView row="0"> 
            <StackLayout class="bg_grey">
                <image:single/>
                <StackLayout margin="0 20 0 20">
                    <profile:hive/>
                    <details:requirements marginTop="20"/>
                    <details:description marginTop="20"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
        <buttonBottom:single row="1"/>
    </GridLayout>

</Page>